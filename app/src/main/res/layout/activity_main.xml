<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="com.project.cecib.dawin_project.MainActivity"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <GridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="9"
        android:verticalSpacing="1dp"
        android:horizontalSpacing="1dp"
        android:stretchMode="none"
        android:columnWidth="20dp"
        android:layout_centerInParent="true"
        android:paddingLeft="40dp"
        android:paddingTop="20dp">
    </GridView>

    <TextView
        android:id="@+id/score"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="20dp"
        android:textSize="30dp"
        android:textColor="@color/colorScore"/>

    <TextView
        android:id="@+id/defeat"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="200dp"
        android:textColor="@color/colorDefeat"
        android:textSize="80dp"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/buttonLeft"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:text="◄" />

    <Button
        android:id="@+id/buttonDown"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="90dp"
        android:text="▼"/>

    <Button
        android:id="@+id/buttonRight"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="180dp"
        android:text="►"/>

    <Button
        android:id="@+id/buttonRotate"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="270dp"
        android:text="tourner" />

    <Button
        android:id="@+id/buttonReload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/gridview"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:text="Réinitialiser"/>

    <ImageView
        android:id="@+id/imgPreview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignRight="@id/gridview"
        android:layout_marginRight="20dp"
        android:layout_marginTop="100dp"/>

</RelativeLayout>






